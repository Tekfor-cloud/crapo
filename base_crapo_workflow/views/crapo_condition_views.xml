<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" 
        id="view_crapo_condition_tree">
        <field name="name">Automaton conditions</field>
        <field name="model">crapo.condition</field>
        <field name="mode">primary</field>
        <field name="type">tree</field>
        <field name="arch" 
            type="xml">
            <tree string="Conditions" 
                default_order="sequence asc">
                <field name="sequence" 
                    widget="handle" />
                <field name="name" />
                <field name="description" />
                <field name="condition" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" 
        id="view_crapo_condition_form">
        <field name="name">Automaton conditions</field>
        <field name="model">crapo.condition</field>
        <field name="mode">primary</field>
        <field name="type">form</field>
        <field name="arch" 
            type="xml">
            <form string="Conditions definitions">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                        <field name="condition" />
                        <field name="sequence" />
                        <field name="is_precondition" />
                        <field name="is_postcondition" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
