<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- All users should be able to read data -->

        <record id="access_workflow_activity_all" model="ir.model.access">
            <field name="name">access.workflow.activity.readall</field>
            <field name="model_id" ref="model_crapo_workflow_activity" />
            <field name="group_id" eval="ref('base.group_user')" />
            <field name="perm_read">1</field>
            <field name="perm_write">0</field>
            <field name="perm_create">0</field>
            <field name="perm_unlink">0</field>
        </record>

        <record id="access_workflow_activity_admin" model="ir.model.access">
            <field name="name">access.workflow.activity.admin</field>
            <field name="model_id" ref="model_crapo_workflow_activity" />
            <field name="group_id" eval="ref('group_crapo_admin')" />
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
        </record>


    </data>
</odoo>