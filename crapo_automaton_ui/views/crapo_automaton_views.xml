<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" 
        id="view_crapo_automata_tree">
        <field name="name">Automata</field>
        <field name="model">crapo.automaton</field>
        <field name="priority" 
            eval="16" />
        <field name="mode">primary</field>
        <field name="type">tree</field>
        <field name="arch" 
            type="xml">
            <tree string="Automata" 
                default_order="name asc" 
                create="false">
                <field name="model_id" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" 
        id="view_crapo_automaton_form">
        <field name="name">Automaton</field>
        <field name="model">crapo.automaton</field>
        <field name="priority" 
            eval="16" />
        <field name="mode">primary</field>
        <field name="type">form</field>
        <field name="arch" 
            type="xml">
            <form string="Automaton">
                <group name="automaton" 
                    string="Automaton definition">
                    <field name="name" />
                    <field name="model_id" />
                    <field name="sync_state_field" />
                </group>
                <notebook>
                    <page string="States">
                        <field name="state_ids" 
                            context="{'default_automaton_id':active_id,'current_automaton':active_id}" />
                    </page>
                    <page string="Transitions">
                        <field name="transition_ids" 
                            context="{'default_automaton_id':active_id,'current_automaton':active_id}" />
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="view_automaton_diagram" 
        model="ir.ui.view">
        <field name="name">automaton.diagram</field>
        <field name="model">crapo.automaton</field>
        <field name="arch" 
            type="xml">
            <diagram string="Automaton Editor">
                <node object="crapo.automaton.state" 
                    shape="rectangle:is_start_state or is_end_state">
                    <field name="name" />
                </node>
                <arrow object="crapo.automaton.transition" 
                    source="from_state_id" 
                    destination="to_state_id" 
                    label="['name']">
                    <field name="from_state_id" />
                    <field name="to_state_id" />
                    <field name="action_id" />
                </arrow>
            </diagram>
        </field>
    </record>

</odoo>
