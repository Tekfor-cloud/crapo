<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- All users should be able to read data -->

        <record id="access_workflow_context_entry_all" 
            model="ir.model.access">
            <field name="name">access.workflow.context.entry.readall</field>
            <field name="model_id" 
                ref="model_crapo_workflow_context_entry" />
            <field name="group_id" 
                eval="ref('base.group_user')" />
            <field name="perm_read">1</field>
            <field name="perm_write">0</field>
            <field name="perm_create">0</field>
            <field name="perm_unlink">0</field>
        </record>

        <record id="access_workflow_context_entry_admin" 
            model="ir.model.access">
            <field name="name">access.workflow.context.entry.admin</field>
            <field name="model_id" 
                ref="model_crapo_workflow_context_entry" />
            <field name="group_id" 
                eval="ref('crapo_base.group_crapo_admin')" />
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
        </record>

    </data>
</odoo>
