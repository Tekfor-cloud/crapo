<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" 
        id="view_crapo_workflow_event_tree">
        <field name="name">Workflow</field>
        <field name="model">crapo.workflow.event</field>
        <field name="priority" 
            eval="16" />
        <field name="mode">primary</field>
        <field name="type">tree</field>
        <field name="arch" 
            type="xml">
            <tree>
                <field name="name" />
                <field name="trigger_id" />
                <field name="model_id" />
                <field name="context_event_ids" />
                <field name="activity_id" />
                <field name="record_id_context_key" />
                <field name="condition" />
                <field name="event_type" />
            </tree>
        </field>
    </record>
</odoo>
