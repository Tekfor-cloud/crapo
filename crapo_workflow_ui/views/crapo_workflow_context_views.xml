<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" 
        id="view_crapo_workflow_context_tree">
        <field name="name">Workflow</field>
        <field name="model">crapo.workflow.context</field>
        <field name="priority" 
            eval="16" />
        <field name="mode">primary</field>
        <field name="type">tree</field>
        <field name="arch" 
            type="xml">
            <tree>
                <field name="id" />
                <field name="context_event_ids" 
                    widget="many2many_tags" />
                <field name="context_entry_ids" 
                    widget="many2many_tags" />
            </tree>
        </field>
    </record>
</odoo>
